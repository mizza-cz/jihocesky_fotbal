<section class="archive-section">
  <div class="container">
    <div class="row g-4 mb-5">
      <div class="col-xl-8">
        <div class="archive-section__content">
          <h1 class="h1 mb-4">ARCHIV ČLÁNKŮ</h1>
          <div class="header-section">
            <form
              action="/article/"
              method="get"
              class="header-section__form header-section__label"
            >
              <div class="row gy-3 align-items-end">
                <div class="col-md-4">
                  <div class="o-select header-section__label">
                    <div class="header-section__category">Kategorie</div>
                    <select name="category" class="js-select">
                      <option value="">Kategorie</option>
                      <option value="aktualni-zpravy">Aktuální zprávy</option>
                      <option value="rozhovory">Rozhovory</option>
                      <!-- další options -->
                    </select>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="o-select header-section__label">
                    <div class="header-section__category">Soutěž</div>
                    <select name="month" class="js-select">
                      <option value="">Soutěž</option>
                      <option value="1">Soutěž 1</option>
                      <option value="2">Soutěž 2</option>
                      <option value="1">Soutěž 1</option>
                      <option value="2">Soutěž 2</option>
                      <!-- další options -->
                    </select>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="o-select header-section__label">
                    <div class="header-section__category">Měsíc</div>
                    <select name="month" class="js-select">
                      <option value="">Měsíc</option>
                      <option value="1">leden</option>
                      <option value="2">únor</option>
                      <!-- další options -->
                    </select>
                  </div>
                </div>

                <div class="col-sm-9">
                  <div class="header-section__category">Vyhledávání</div>
                  <div class="header-section__input">
                    <input
                      type="text"
                      name="search"
                      placeholder="Hledaný text"
                    />
                    <button type="submit" class="header-section__btn">
                      <img
                        src="images/ico/search-menu.svg"
                        loading="lazy"
                        alt="search-menu"
                      />
                    </button>
                  </div>
                </div>
                <div class="col-sm-3">
                  <button class="header-section__form-btn" type="submit">
                    Hledat
                  </button>
                </div>
              </div>
            </form>
          </div>
